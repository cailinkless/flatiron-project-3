<%= form_for @production do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <br><br>

    <%= f.label :opening %>
    <%= f.datetime_select :opening %>

    <br><br>

    <%= f.label :closing %>
    <%= f.datetime_select :closing %>

    <br><br>

    <%# Should label be for :company_id ? %>
    <%= f.label :company %>
    <%= f.collection_select :company_id, Company.all, :id, :name, include_blank: true %>

        <%# Select or Build Company %>
        <%= f.fields_for :company, @production.build_company do |cf| %>
            <%= cf.text_field :name %>
        <% end %>

    <br><br>

    <%= f.submit %>

<% end %>