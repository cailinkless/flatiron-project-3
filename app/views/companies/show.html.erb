<h2><%= @company.name %></h2>

<%# Go to controller with @company.productions.published.each %>

<% @company.productions.published.each do |production| %>
    <%= link_to production.title, company_production_path(@company[:id], production[:id]) %>
    <br>
    <p><%= production.readable_opening %> - <%= production.readable_closing %></p>
    <br><br>
<% end %>

<br>

<% if current_user %>

    <%= link_to "Add new production for #{@company.name}", new_company_production_path(@company) %>

<% else %>

    <%= render 'application/unknown' %>

<% end %>

<%= render 'application/explore' %>